root = true

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
insert_final_newline = true

# Matches multiple files with brace expansion notation
[*.{js,jsx,ts,tsx}]
charset = utf-8

# 2-space indentation for JavaScript and TypeScript files
[*.js, *.jsx, *.ts, *.tsx]
indent_style = space
indent_size = 2

# 2-space indentation for HTML files
[*.html]
indent_style = space
